<%= render "layouts/user-panel" %>
<%= javascript_include_tag "ajax/status" %>

<div class="main content">
    <div class="container">
        <h5>Estatus</h5>

        <div class="row">
            <div class="col s4">
                <label for="first_name">Buscar en detalles</label>
                <input id="search_keyword" type="text">
            </div>
            <div class="col s4">
                <label for="first_name">Buscar en dirección</label>
                <input id="address_keyword" type="text">
            </div>
            <div class="col s2">
                <label for="">Ordenar por</label>
                <select name="" id="sort_by">
                    <option value="fecha">Fecha</option>
                    <option value="address">Dirección</option>
                    <option value="tipo">Tipo</option>
                </select>
            </div>
            <div class="col s2">
                <label for="">Orden</label>
                <div class="switch" style="display: inline-block; padding-top: 12px">
                    <label>
                        Asc
                        <input type="checkbox" id="reverse">
                        <span class="lever"></span>
                        Des
                    </label>
                </div>
            </div>
        </div>

        <table>
            <thead>
                <tr>
                    <th>Fecha</th>
                    <th>Dirección</th>
                    <th>Detalles</th>
                    <th>Imagen</th>
                    <th>Tipo</th>
                </tr>
            </thead>
            <tbody id="status_body">
                <%= render partial: "table-status" %>
            </tbody>
        </table>
    </div>
</div>
