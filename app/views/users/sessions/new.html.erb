
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1"/>
  <title>Safe & Sound</title>
  <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
  <!-- Materialize -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
  <script src="js/init.js"></script>

  <!-- CSS  -->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>

<div id="index-banner" class="parallax-container" style="line-height: 1">
  <div class="section no-pad-bot">
    <div class="container">
      <h1 class="header center" style="color: #455a64 ">Ingresar</h1>
      <div class="row">
        <div class="col s12 m6 offset-m3 l6 offset-l3" style="color: #455a64">
          <div class="card white center">
            <div class="card-content center">
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="input-field" >
                  <i class="material-icons prefix">person</i>
                  <%= f.label "Usuario o correo", {:style => "color: #455a64"} %>
                  <%= f.text_field :login %>
                </div>

                <div class="input-field">
                  <i class="material-icons prefix">lock</i>
                  <%= f.label "ContraseÃ±a", {:style => "color: #455a64"} %>
                  <%= f.password_field :password, autocomplete: "off" %>
                </div>

                <% if devise_mapping.rememberable? -%>
                  <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label "Recordar mis datos",{:style => "color: #455a64"} %>
                  </div>
                <% end -%>

                <div class="actions btn-large waves-effect waves-light blue-grey darken-1" style="margin: 10px">
                  <%= f.submit "Ingresar" %>
                </div>
              <% end %>
          </div>

          <%= render "users/shared/links", {:style => "margin: 10px"} %>
          <br />
        </div>
      </div>
    </div>
  </div>
  <div class="parallax"><img height="100%" src="<%= asset_path('mapa.png') %>" alt=""></div>
</div>
