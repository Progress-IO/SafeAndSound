
<head>
 <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
 <meta name="viewport" content="width=device-width, initial-scale=1"/>
 <title>Safe & Sound</title>
 <!--<h1>Safe & Sound</h1>-->
 <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
 <!-- Materialize -->
 <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
 <script src="js/init.js"></script>

 <!-- CSS  -->
 <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>



<div id="index-banner" class="parallax-container" style="line-height: 1">
  <div class="section no-pad-bot">
    <div class="container">
      <h1 class="header center" style="color: #455a64 ">Registrarse</h1>
      <div class="row">
        <div class="col s12 m6 offset-m3 l6 offset-l3" style="color: #455a64">
          <div class="card white center">
            <div class="card-content center">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <div class="input-field">
              <i class="material-icons prefix">email</i>
              <%= f.label "Correo", {:style => "color: #455a64"}  %>
              <%= f.email_field :email %>
            </div>
            
             <div class="input-field">
              <i class="material-icons prefix">person</i>
              <%= f.label "Nombre de usuario"  , {:style => "color: #455a64"}  %>
              <%= f.text_field :username %>
            </div>

            <div class="input-field">
              <i class="material-icons prefix">lock_outline</i>
              <%= f.label "ContraseÃ±a", {:style => "color: #455a64"}  %>
              <!--<% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />-->
              <%= f.password_field :password, autocomplete: "off" %>
            </div>

            <div class="input-field">
              <i class="material-icons prefix">lock</i>
              <%= f.label "Confirmar constraseÃ±a", {:style => "color: #455a64"}  %>
              <%= f.password_field :password_confirmation, autocomplete: "off" %>
            </div>

            <div class="actions btn-large waves-effect waves-light blue-grey darken-1" style="margin: 10px">
              <%= f.submit "Crear cuenta" %>
            </div>
          <% end %>

        </div>

          <%= render "users/shared/links" %><br />
        </div>
        </div>
      </div>
    </div>
  </div>
  <div class="parallax"><img src="<%= asset_path('mapa.png') %>" alt=""></div>
</div>
