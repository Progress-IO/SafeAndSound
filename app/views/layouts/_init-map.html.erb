<script>

    var map;
    var crime_marker;
    function initMap() {
        var bogota = {lat: 4.624335, lng: -74.063644};
          map = new google.maps.Map(document.getElementById('map'), {
          zoom: 13,
          center: bogota,
          title: "crime"
        });
   }

  function addMarker(location) {
      crime_marker = new google.maps.Marker({
          position: location,
          map: map,
          icon: "<%= asset_path('robbery.png')%>",
          draggable: true
      });

  }


</script>
